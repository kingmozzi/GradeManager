<UserControl x:Class="GradeManager.View.UserControls.ComboBoxBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GradeManager.View.UserControls"
             mc:Ignorable="d" 
             Height="96" Width="256">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding DisplayText}" Margin="5,5,5,5" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="20"/>
        <ComboBox Grid.Column="1" Width="100" Margin="5,5,5,5" Height="50"/>


    </Grid>
</UserControl>
